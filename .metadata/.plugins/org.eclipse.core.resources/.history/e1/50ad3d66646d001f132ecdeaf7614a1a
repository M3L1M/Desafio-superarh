package com.snail;

import java.util.Iterator;

public class Snail {
	public static void main(String[] args) {
		int matriz[][] = new int [][]{{2,3,5},{1,2,3},{4,5,6}};
		int n=3,x=3;
		int[][] M = new int[n + 1][n + 1]{{2,3,5},{1,2,3},{4,5,6}};
	    for (int a = 1; a <= n / 2; a++) {
	        for (int i = a; i <= n - a; i++) {
	            M[a][i] = x;
	            x++;
	        }
	        for (int i = a; i <= n - a; i++) {
	            M[i][n - a + 1] = x;
	            x++;
	        }
	        for (int i = n - a + 1; i >= a + 1; i--) {
	            M[n - a + 1][i] = x;
	            x++;
	        }
	        for (int i = n - a + 1; i >= a + 1; i--) {
	            M[i][a] = x;
	            x++;
	        }
	    }
	    if (n % 2 == 1) {
	        M[n / 2 + 1][n / 2 + 1] = x;
	    }
		
		
		/*for(int i = 0; i<matriz.length;i++) {
			for(int j=0;j<3;j++) {
				System.out.print(matriz[i][j]+" ");
			}
			System.out.println();
		}*/
		
		
	}
}
